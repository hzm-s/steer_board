<%= tag.div data: { sort_item: true, item_in_list: true } do %>
  <%= link_to item_path(id), data: { turbo_frame: 'item_detail', action: 'slide-over#open', sliding_id: kind == :idea ? 'item-detail' : 'another' }, class: %w(block rounded-lg) do %>
    <%= render Ui::ItemCardComponent.new(kind: kind, size: :sm) do %>
      <% if due %>
        <%= tag.div class: %w(mb-1) do %>
          <%= render ItemDueComponent.new(date: due) %>
        <% end -%>
      <% end -%>
      <%= tag.div class: %w(flex justify-between) do %>
        <%= tag.div class: %w(flex items-center gap-1) do %>
          <%= render ItemKindComponent.new(kind: kind) %>
          <%= render ItemIdComponent.new(id: id, class: %w(text-sm)) %>
        <% end -%>
        <%= tag.div class: %w(flex-grow-0) do %>
          <%= size && render(ItemSizeComponent.new(size: size)) %>
        <% end -%>
      <% end -%>
      <%= tag.div class: %w(mt-1) do %>
        <%= body %>
      <% end -%>
      <%= tag.div class: %w(mt-1 flex justify-end) do %>
        <%= render Ui::AvatarListComponent.new(members: contributors, size: :sm) %>
      <% end -%>
    <% end -%>
  <% end -%>
<% end -%>
